{
  "extends": ["next/core-web-vitals"],
  "plugins": ["@typescript-eslint/eslint-plugin"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "error",
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal", ["parent", "sibling", "index"]],
        "pathGroups": [
          {
            "pattern": "next/*",
            "group": "external"
          }
        ],
        "pathGroupsExcludedImportTypes": ["next/*"]
      }
    ]
  }
}
